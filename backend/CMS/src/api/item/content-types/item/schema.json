{
  "kind": "collectionType",
  "collectionName": "items",
  "info": {
    "singularName": "item",
    "pluralName": "items",
    "displayName": "Items",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "cover": {
      "type": "richtext",
      "required": true,
      "default": "https://myplayer-backend.onrender.com/uploads/thumbnail_profilepic_14009cf058.png"
    },
    "filePath": {
      "type": "richtext",
      "required": true,
      "default": "https://myplayer-backend.onrender.com/uploads/audio_cc95d2ba5e.mp3"
    },
    "relatedItems": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::item.item"
    },
    "likes": {
      "type": "biginteger"
    },
    "likeListUser": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "plugin::users-permissions.user"
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "Music",
        "Movie",
        "Sport",
        "Radio"
      ],
      "required": true,
      "default": "Music"
    },
    "label": {
      "type": "enumeration",
      "enum": [
        "Recommended",
        "MostWatched",
        "TrendingNow",
        "NewReleases"
      ],
      "required": true,
      "default": "Recommended"
    },
    "mood": {
      "type": "enumeration",
      "enum": [
        "Happy",
        "Sad",
        "Horror",
        "Comedy"
      ]
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "Audio",
        "Video"
      ],
      "required": true,
      "default": "Audio"
    },
    "watched": {
      "type": "boolean",
      "default": false,
      "required": true
    }
  }
}
